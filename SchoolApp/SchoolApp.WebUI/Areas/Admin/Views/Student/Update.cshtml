@model Student
<div class="display-6">
    @TempData["ServiceResponse"]
</div>
<div class="container">
    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <input asp-for="@Model.StudentId" type="hidden"/>
        <div class="form-group my-3">
            <label asp-for="StudentName">Student Name</label>
            <input class="form-control my-2" asp-for="StudentName" />
        </div>
        <div class="form-group my-2">
            <label asp-for="StudentSurname">Student Surname</label>
            <input class="form-control my-2" asp-for="StudentSurname" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Credit">Credit</label>
            <input class="form-control my-2" asp-for="Credit" />
        </div>
        <div class="form-group my-2">
            <label asp-for="ImageUrl">Image</label>
            <input type="file" name="file" class="form-control my-2" asp-for="ImageUrl" />
        </div>
        <button class="btn btn-primary">Kaydet</button>
    </form>
</div>
