@model Lesson
<div class="display-6">
    @TempData["ServiceResponse"]
</div>
<div class="container">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group my-2">
            <label asp-for="LessonTypeId">Lesson Type</label>
            <select class="form-control my-2" asp-for="LessonTypeId" asp-items="@ViewBag.LessonTypeList"></select>
        </div>
        <div class="form-group my-3">
            <label asp-for="LessonName">Name</label>
            <input class="form-control my-2" asp-for="LessonName" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Price">Price</label>
            <input class="form-control my-2" asp-for="Price" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Description">Description</label>
            <input type="textarea" rows="3" class="form-control my-2" asp-for="Description" />
        </div>
        <button class="btn btn-primary">Kaydet</button>
    </form>
</div>
